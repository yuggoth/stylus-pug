include ../form-header/form-header
include ../form-body/form-body
include ../form/form
include ../skills/skills
include ../levels-slider/levels-slider
include ../dynamic-textarea/dynamic-textarea
include ../tasks/tasks
include ../date-complete/date-complete
include ../empty-block/empty-block

mixin container(form, skills, tasks, about, level, date)
	+b.container&attributes(attributes)
		.form-header
			.form-header__delo
		.form-body
			form
				+form(form)
				+empty-block("60px")
				h2 Расскажите о себе чекбоксами
				.h2-description Отметьте чекбоксами скиллы, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантированно будете справляться.
				+empty-block("18px")
				+skills(skills)
				+empty-block("53px")
				h2 Уровень владения JavaScript
				+empty-block("14px")
				+levels-slider(level)
				+empty-block("12px")
				h2 Расскажите о себе словами
				.h2-description Напишите пару предложений, чем вас привлекла наша вакансия и чего вы ожидаете от работы в CSSSR. Кстати, будет здорово, если при нехватке места для текста строки будут добавляться автоматически.
				+empty-block("22px")
				+dynamic-textarea(about)
				+empty-block("23px")
				h2 Какие у вас планы на будущее?
				.h2-description Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.
				+empty-block("16px")
				+tasks(tasks)
				+empty-block("72px")
				+date-complete(date)
				.clear
				+empty-block("50px")
		a.container__logo(href="/")
		.container__privacy
